{
  "position": "bottom",
  "spacing": 0,
  "height": 0,
  "reload_style_on_change": true,
  "layer": "top",
  "custom/separator": {
    "format": "::",
    "interval": "once",
    "tooltip": false
  },
  "modules-left": [
    "dwl/tags"
    // "dwl/window"
  ],
  "modules-center": [
    "dwl/window"
  ],
  "modules-right": [
    "tray",
    "cpu",
    "custom/separator",
    "memory",
    "custom/separator",
    "battery",
    "custom/separator",
    "clock"
  ],
  "dwl/tags": {
    "disable-unused": true,
    // "num-tags": 9,
    "hide-vacant": true
    // "tag-labels": ["1", "2", "3", "4", "5", "6", "7", "8", "9"]
  },
  "dwl/window": {
    "max-length": 50
  },
  "tray": {
    "spacing": 10,
    "tooltip": false
  },
  "cpu": {
    "format": "cpu {load}%",
    "interval": 2,
    "states": {
      "critical": 90
    }
  },
  "memory": {
    "format": "mem {percentage}%",
    "interval": 2,
    "states": {
      "critical": 80
    }
  },
  "battery": {
    "format": "bat {capacity}%",
    "interval": 5,
    "states": {
      "warning": 20,
      "critical": 10
    },
    "tooltip": false
  },
  "network": {
    "format-wifi": "wifi {bandwidthDownBits}",
    "format-ethernet": "enth {bandwidthDownBits}",
    "format-disconnected": "no network",
    "interval": 5,
    "tooltip": false
  },
  "pulseaudio": {
    "scroll-step": 5,
    "max-volume": 150,
    "format": "vol {volume}%",
    "format-bluetooth": "vol {volume}%",
    "nospacing": 1,
    "on-click": "pavucontrol",
    "tooltip": false
  },
  "clock": {
    "format": "{:%a %d %b  %H:%M:%S}"
  }
}
